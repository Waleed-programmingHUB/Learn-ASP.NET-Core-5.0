@model RazorView_ASPNET.Models.MathModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Simple Math</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SimpleMath">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstNumber" class="control-label"></label>
                <input asp-for="FirstNumber" class="form-control" />
                <span asp-validation-for="FirstNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SecondNumber" class="control-label"></label>
                <input asp-for="SecondNumber" class="form-control" />
                <span asp-validation-for="SecondNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Result">Result: @Model.Result</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Answer" class="btn btn-outline-success" />
                <input type="reset" value="Reset" class="btn btn-outline-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
